<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.btcc.web.trade.mapper.UserEmailMapper">

    <select id="queryUserEmail" resultType="java.util.Map" parameterType="java.lang.Integer">
        select
            user_id,
            user_email
        from
            users
        where
            user_id in
            <foreach collection="list" open="(" separator="," close=")" item="item" >
                #{item}
            </foreach>
            order by user_id
    </select>

</mapper>